<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="-1dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/map" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Для определения \nместоположения, пожалуйста \nперейдите в настройки, и \nразрешите использование \nместоположения."
            android:textSize="18sp" />

        <TextView
            android:id="@+id/results"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Местоположение определено с помощью интернета:\nдолгота - 58.0115013 широта - 58.0115013"
            android:textSize="12sp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:id="@+id/results2"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите долготу"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="220dp"
            android:id="@+id/dolgota"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите широта"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="220dp"
            android:id="@+id/shirota"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Получить адрес"
            android:textAllCaps="false"
            android:onClick="onGetAddress"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300dp"
            android:onClick="onCalculate"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Рассчитать"
            android:textAllCaps="false"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>